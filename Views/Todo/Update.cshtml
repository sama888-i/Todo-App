@using TodoApp.Models
@model Todo
<!DOCTYPE html>

<html>
    <head>
     <meta name="viewport" content="width=device-width" />
     <title>Update</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
        <a class="btn btn-primary my-2" href="/Todo/Index">List</a>
            <form method="post">
                <div class="form-group">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" value="@Model.Title" class="form-control" id="Title" placeholder="Title " name="Title" required  />
                </div>
                <div class="form-group">
                    <label for="Description" class="form-label">Description</label>
                    <input type="text" value="@Model.Description" class="form-control" id="Description" placeholder=" Description" name="Description" />
                </div>
                <div class="form-group">
                    <label for="DeadLine" class="form-label">DeadLine</label>
                    <input type="datetime-local" value="@Model.DeadLine?.ToString("yyyy-MM-dd HH:mm")" class="form-control" id="DeadLine" placeholder="DeadLine" name="DeadLine" />
                </div>

                <button class="btn btn-success my-2">Update</button>

            </form>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


    </body>
</html>
